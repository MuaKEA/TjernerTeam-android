<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shift_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="142dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/event_description" />

            <TextView
                android:id="@+id/salary"
                android:layout_width="104dp"
                android:layout_height="16dp"
                android:layout_gravity="end"
                android:layout_marginEnd="159dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/event_duration"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/employee_type"
                android:layout_width="364dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/event_date"
                app:layout_constraintTop_toBottomOf="@+id/salary" />

            <TextView
                android:id="@+id/event_date"
                android:layout_width="47dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/customer_name"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/event_duration"
                android:layout_width="99dp"
                android:layout_height="16dp"
                android:layout_gravity="center_horizontal|top"
                app:layout_constraintEnd_toStartOf="@+id/salary"
                app:layout_constraintStart_toEndOf="@+id/event_date"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/address"
                android:layout_width="363dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal|bottom"
                app:layout_constraintBottom_toTopOf="@+id/event_description"
                app:layout_constraintStart_toEndOf="@+id/event_date" />

            <TextView
                android:id="@+id/event_description"
                android:layout_width="217dp"
                android:layout_height="20dp"
                android:layout_gravity="end|center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/event_date" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>