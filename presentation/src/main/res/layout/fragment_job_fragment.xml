<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shift.Job_fragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/grey_bg"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginTop="5dp"
                android:background="#E0E0E0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/salary_icon"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/moneybagicon"
                android:src="@drawable/money_bag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date_icon" />

            <TextView
                android:id="@+id/costumer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="28dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/address_city"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/address_city"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginStart="10dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif"
                android:gravity="center|start"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/costumer_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/event_date_monthday2"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textSize="23sp"
                app:layout_constraintStart_toEndOf="@+id/event_date_weekday2"
                app:layout_constraintTop_toBottomOf="@+id/costumer_name" />

            <TextView
                android:id="@+id/event_date_weekday2"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textSize="23sp"
                app:layout_constraintStart_toEndOf="@+id/date_icon"
                app:layout_constraintTop_toBottomOf="@+id/costumer_name" />

            <TextView
                android:id="@+id/event_date_month2"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textSize="23sp"
                app:layout_constraintStart_toEndOf="@+id/slash"
                app:layout_constraintTop_toBottomOf="@+id/costumer_name" />

            <ImageView
                android:id="@+id/date_icon"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/calender_icon"
                android:src="@drawable/calender512"
                app:layout_constraintEnd_toStartOf="@+id/event_date_monthday2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/costumer_name" />

            <TextView
                android:id="@+id/salary2"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/salary_icon"
                app:layout_constraintTop_toBottomOf="@+id/event_date_monthday2" />

            <TextView
                android:id="@+id/paymentDate"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/payment_date_txt"
                app:layout_constraintTop_toBottomOf="@+id/event_date_monthday2" />

            <TextView
                android:id="@+id/event_type"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="42dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/salary_icon" />

            <TextView
                android:id="@+id/employee_type2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/employee_type_txt_rounded_corners"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/event_description2"
                app:layout_constraintStart_toEndOf="@+id/event_type" />

            <TextView
                android:id="@+id/event_description2"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_type" />

            <TextView
                android:id="@+id/address2"
                android:layout_width="128dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_description2" />

            <TextView
                android:id="@+id/paaklaedning"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="33dp"
                android:text="@string/p_kl_dning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address2" />

            <TextView
                android:id="@+id/dress_code"
                android:layout_width="128dp"
                android:layout_height="54dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/paaklaedning" />

            <TextView
                android:id="@+id/staffFood_text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="33dp"
                android:text="@string/personalemad"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address2" />

            <TextView
                android:id="@+id/staffFood"
                android:layout_width="92dp"
                android:layout_height="54dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/staffFood_text" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="346dp"
                android:layout_marginBottom="4dp"
                android:text="@string/hvor"
                app:layout_constraintBottom_toTopOf="@+id/address2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_description2" />

            <TextView
                android:id="@+id/overtime_text"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:text="@string/overarbejde"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dress_code"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/transport_text"
                android:layout_width="119dp"
                android:layout_height="24dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="40dp"
                android:text="@string/transport_tillaeg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dress_code" />

            <TextView
                android:id="@+id/overtime"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/overtime_text" />

            <TextView
                android:id="@+id/transport"
                android:layout_width="119dp"
                android:layout_height="33dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transport_text"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/hyphen"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/hyphen"
                app:layout_constraintStart_toEndOf="@+id/salary2"
                app:layout_constraintTop_toBottomOf="@+id/event_date_monthday2" />

            <Button
                android:id="@+id/request_job_btn"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/request_job_btn_rounded_corners"
                android:drawableStart="@drawable/ic_send_black_24dp"
                android:text="@string/ans_g_job"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transport" />

            <TextView
                android:id="@+id/payment_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/udbetales"
                app:layout_constraintStart_toEndOf="@+id/hyphen"
                app:layout_constraintTop_toBottomOf="@+id/event_date_monthday2" />

            <TextView
                android:id="@+id/slash"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/slash"
                android:textSize="23sp"
                app:layout_constraintStart_toEndOf="@+id/event_date_monthday2"
                app:layout_constraintTop_toBottomOf="@+id/costumer_name" />

            <TextView
                android:id="@+id/event_duration_txt"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="23sp"
                app:layout_constraintStart_toEndOf="@+id/event_date_month2"
                app:layout_constraintTop_toBottomOf="@+id/costumer_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>