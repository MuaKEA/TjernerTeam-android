<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shift.UserShiftActivity"
    android:windowSoftInputMode="adjustPan|adjustResize">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/top_user_shiftoverview_menu"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="@color/hockeyapp_background_white"
        app:itemIconTint="@color/custom_darkgray"
        app:itemTextColor="@color/custom_darkgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/shift_end_menu" />


    <FrameLayout
        android:id="@+id/user_shift_frame"
        android:layout_width="411dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_user_shiftoverview_menu">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>